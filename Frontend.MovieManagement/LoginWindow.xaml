<Window x:Class="UI.MovieManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.MovieManagement"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="236,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="236,211,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblWelcome" Content="Welcome" HorizontalAlignment="Left" Margin="384,81,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTitle" Content="Movie Management System" HorizontalAlignment="Left" Margin="338,112,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="249,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="249,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="384,298,0,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
    </Grid>
</Window>
